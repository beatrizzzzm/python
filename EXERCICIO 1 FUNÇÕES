#ATV1

def salario(salario, aumento):
  return salario + salarioComAumento

def aumento(aumento):
  return salario * (aumento / 100)

def salarioComAumento(salario, resultadoAumento):
  return salario + resultadoAumento


salario = float(input("insira seu atual salário: "))
aumento = float(input("inaira a porcentegem de seu aumento: "))
resultadoAumento = salario * (aumento / 100)
salarioComAumento = salario + resultadoAumento

print("o salario atual era de", salario)
print("o aumento adicionado foi de", aumento)
print("o valor de aumento e igual a",resultadoAumento)
print("o salário atualizacom com o aumento ficou de", salarioComAumento)
